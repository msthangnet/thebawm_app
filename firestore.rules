rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read their own profile and public info
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Pages
    match /pages/{pageId} {
      allow read: if true;
      // Only authenticated users can follow/unfollow themselves
      allow update: if request.auth != null && (
        // owners/admins can update anything
        resource.data.ownerId == request.auth.uid || (request.auth.token.admin == true) ||
        // allow following/unfollowing: only modify followers array for yourself
        (request.resource.data.keys().hasOnly(['followers']) && (request.resource.data.followers is list) && (request.auth != null))
      );
      allow create: if request.auth != null; // creation restricted by app logic
    }

    // Groups
    match /groups/{groupId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        // owner or admins can approve/join/modify members
        resource.data.ownerId == request.auth.uid || (resource.data.admins is list && resource.data.admins.contains(request.auth.uid)) || (request.auth.token.admin == true)
        ||
        // allow user to add themselves to pendingMembers or members arrays only for their uid
        (request.resource.data.keys().hasOnly(['pendingMembers']) && request.resource.data.pendingMembers is list)
      );
    }

    // Events
    match /events/{eventId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        resource.data.ownerId == request.auth.uid || (resource.data.admins is list && resource.data.admins.contains(request.auth.uid)) || (request.auth.token.admin == true)
        ||
        (request.resource.data.keys().hasOnly(['pendingParticipants']) && request.resource.data.pendingParticipants is list)
      );
    }

    // Notifications - writes by server/cloud functions - allow client to create limited notification entries for now
    match /notifications/{doc} {
      allow read: if request.auth != null && (resource.data.recipientId == request.auth.uid || resource.data.recipientId == null);
      allow create: if request.auth != null;
      allow update, delete: if false; // only server should modify notifications
    }

    // Fallback
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
